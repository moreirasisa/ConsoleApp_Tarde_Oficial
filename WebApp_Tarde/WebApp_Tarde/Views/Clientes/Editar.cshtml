@model WebApp_Tarde.Models.ClientesViewModel

<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Editar de Cliente</h2>
            </div>
            <div class="card-body">
                <form action="/Clientes/SalvarDados" method="post">
                    <label>Código</label>
                    <input name="Id" type="text" class="form-control" readonly value="@Model.Id" />
                    <br />

                    <label>Nome</label>
                    <input type="text" name="Nome" class="form-control" value="@Model.Nome" />
                    <br />

                    <label>Telefone</label>
                    <input type="text" name="Telefone" class="form-control" value="@Model.Telefone" />
                    <br />

                    <button type="submit" class="btn btn-success">
                        Salvar Cliente
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4">
    </div>
</div>